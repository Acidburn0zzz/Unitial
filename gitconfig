[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
[alias]
    ad = add .
    br = branch
    chp = cherry-pick
    ci = commit -v
    cia = commit -v --amend
    co = checkout
    df = diff
    fh = fetch
    mg = merge
    rb = rebase
    rbc = rebase --continue
    rbi = rebase -i
    rbm = rebase master
    sh = stash
    sm = submodule
    st = status
    diffs = diff --stat --summary
    logp = log -p
    logs = log --stat --summary
    logt = log --abbrev-commit --decorate --graph --color --pretty='format:%C(yellow)%h %Creset%s %C(magenta)%an %C(green)%ar'
[push]
    # for only push to current branch
    default = tracking
[core]
    editor = vim
    excludesfile = ~/.gitignore
[mergetool]
    keepBackup = true
[gui]
    encoding = utf-8
[i18n]
    commitencoding = utf-8
    logoutputencoding = utf-8
